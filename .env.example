# Accord Music Store Environment Variables
# Rename this file to .env and fill in your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=accord_db
DB_USER=accord_user
DB_PASS=accord_password

# Application Settings
APP_NAME="Accord Music Store"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000

# OpenAI Configuration
OPENAI_API_KEY=your_api_key
OPENAI_API_MODEL=gpt-3.5-turbo-instruct

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-password
SMTP_FROM=noreply@accordmusic.com

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-for-session-management 